<div class="card w-50 mx-auto">
  <div class="card-body">
    <h5 class="card-title text-center">Signup</h5>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %> 
       <div class="field">
        <% f.label :name ,class:"card-text form-control border-0"%><br />
        <%= f.text_field :name,placeholder: :name, autofocus: true, autocomplete: "name",class:"form-control" %>
      </div>

      <div class="field">
        <% f.label :age ,class:"card-text form-control border-0"%><br />
        <%= f.number_field :age ,placeholder: :age ,class:"form-control"%>
      </div>


      <div class="field">
        <% f.label :email ,class:"card-text form-control border-0"%><br />
        <%= f.email_field :email,placeholder: :email , autofocus: true, autocomplete: "email" ,class:"form-control" %>
      </div>
      <br>

      <div class="field">
        <% f.label :password ,class:"card-text form-control border-0" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br /><br>
        <%= f.password_field :password ,placeholder: :password , autocomplete: "new-password" ,class:"form-control" %>
      </div>

      <div class="field mb-3">
        <% f.label :password_confirmation ,class:"card-text form-control border-0"%><br />
        <%= f.password_field :password_confirmation ,placeholder: :password_confirmation, autocomplete: "new-password" ,class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" ,class:"btn btn-primary mb-2"%>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>



